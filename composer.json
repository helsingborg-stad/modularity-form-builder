{
    "name": "helsingborg-stad/modularity-form-builder",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Kristoffer Svanmark",
            "email": "kristoffer.svanmark@knowit.se"
        },
        {
            "name": "Sebastian Thulin",
            "email": "sebastian.thulin@helsingborg.se"
        },
        {
            "name": "Jonatan Hanson",
            "email": "jonatan.hanson@hiq.se"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "helsingborg-stad/acf-export-manager": ">=1.0.0",
        "google/apiclient": "2.7.2",
        "guzzlehttp/guzzle": "7.0.1",
        "guzzlehttp/psr7": "1.7.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/helsingborg-stad/acf-export-manager.git"
        }
    ],
    "extra" : {
        "builder": {
            "commands": [
                "npm ci --no-progress --no-audit",
                "npx --yes browserslist@latest --update-db",
                "npm run build",
                "composer install --prefer-dist --no-progress"
            ],
            "removables": [
                ".git",
                ".gitignore",
                ".github",
                "build.php",
                "composer.json",
                "composer.lock",
                "node_modules",
                "package-lock.json",
                "package.json",
                "webpack.config.js"
            ]
        }
    }
}
